                    <div class="card-body text-center">
                        <h4 class="card-title">Level Two</h4>
                    </div>
                        <a asp-controller="Subjects" asp-action="Subjects" asp-route-lvl="2" class="btn btn-primary px-4 mx-auto mb-4">Explore Subjects</a>
                </div>
            </div>
            <div class="col-lg-4 mb-5">
                <div class="card border-0 bg-light shadow-sm pb-2">
                    <img class="card-img-top mb-2" src="img/class-3.jpg" alt="">
                    <div class="card-body text-center">
                        <h4 class="card-title">Level Three</h4>
                    </div>
                        <a asp-controller="Subjects" asp-action="Subjects" asp-route-lvl="3" class="btn btn-primary px-4 mx-auto mb-4">Explore Subjects</a>
                </div>
            </div>
        </div>
    </div>
</div>
