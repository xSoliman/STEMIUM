@model Info
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add new service</title>
    <style>
 
        .container {
            margin-top: 50px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 40px;
        }

        .card-title {
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="file"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        input[type="file"] {
            padding-top: 12px;
            /* Style for the file input */
            background-color: #f1f1f1;
            color: #333;
            cursor: pointer;
            transition: background-color 0.3s ease;
            /* Padding and border to match other inputs */
            padding-left: 10px;
            border: none;
            border-radius: 5px;
        }

            /* Style for file input when hovered */
            input[type="file"]:hover {
                background-color: #e9e9e9;
            }

        .invalid-feedback {
            color: red;
            margin-top: 5px;
        }

        button[type="submit"] {
            display: block;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;  
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add @Model.subject @Model.service for Level @Model.level Chapter @Model.chapter Lesson @Model.lesson </h5>

                        <form asp-controller="Services" asp-action="AddService" method="post" enctype="multipart/form-data">
                            <!-- Hidden inputs for Services model -->
                            <input type="hidden" name="grade" value="@Model.level" />
                            <input type="hidden" name="subject" value="@Model.subject" />
                            <input type="hidden" name="serviceType" value="@Model.service" />
                            <input type="hidden" name="lsn" value="@Model.lesson" />
                            <input type="hidden" name="ch" value="@Model.chapter" />

                            <div class="form-group">
                                <label for="FileName">File Name:</label>
                                <input type="text" id="FileName" name="serviceName" class="form-control" required />
                                <div class="invalid-feedback">Please enter a file name.</div>
                            </div>
                            <div class="form-group">
                                <label for="PdfFile">PDF File:</label>
                                <input type="file" id="PdfFile" name="filePath" class="form-control-file" required />
                                <div class="invalid-feedback">Please select a PDF file to upload.</div>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
