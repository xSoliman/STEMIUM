                                        @model User


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Parent</title>
    <style>
        /* Custom styling for form-floating container */
        .form-floating {
            margin-bottom: 1rem;
        }

        /* Custom styling for form-select element */
        .form-select {
            width: 100%;
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            background-color: #fff;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            /* Custom styling for form-select when focused */
            .form-select:focus {
                border-color: #80bdff;
                outline: 0;
                box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
            }


        #Gvr {
            margin-left: 50px;
        }

        #register-form {
            padding: 20px;
        }

        .type {
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .card-body input {
            margin-bottom: 20px;
            margin-left: 70px;
        }
        label{
            position:relative;
            left:75px;
            top:5px;

            opacity:0.8;    
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign Up</h5>
                        <div class="type">

                            <a class="btn btn-primary py-2 px-2.5 mt-1" asp-action="RegisterStudent" asp-controller="Signup">Student</a>
                            <a class="btn btn-primary py-2 px-2.5 mt-1" asp-action="RegisterTeacher" asp-controller="Signup">Teacher</a>
                            <a class="btn btn-primary py-2 px-2.5 mt-1" style="background-color:#138496;border:none;" asp-action="RegisterParent" asp-controller="Signup">Parent</a>


                        </div>

                        <form method="post" asp-action="RegisterParent" asp-controller="SignUp" enctype="multipart/form-data">
                            <div class="row g-3">

                                <div class="col-md-8">
                                    <div class="form-floating">
                                        <label for="first_name">Name</label>
                                        <input type="text" class="form-control" id="first_name" placeholder=" " asp-for="@Model.Name" required  />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-md-8">
                                    <div class="form-floating" id="email" data-target-input="nearest">
                                        <label for="Email">Email</label>
                                        <input type="email" class="form-control datetimepicker-input" id="Email" placeholder=" " asp-for="@Model.Email" data-target="#date3" data-toggle="datetimepicker" required />
                                        <span asp-validation-for="Email" style="margin-left:70px;margin-top:-60px;" class=" text-danger"></span>
                                    </div>
                                </div>


                                <div class="col-md-8">
                                    <div class="form-floating">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" placeholder=" " asp-for="@Model.Password" minlength="8" maxlength="20" title="Password must be between 8 and 20 characters" required />
                                        <span asp-validation-for="Password " class=" text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <div class="form-floating">
                                        <label for="age">Age</label>
                                        <input type="number" class="form-control" id="age" placeholder=" " asp-for="@Model.Age" required />
                                        <span asp-validation-for="Age" class="text-danger"></span>
                                    </div>
                                </div>

                                <div id="Gvr" class="col-md-8" style="  position: relative;
            left: 20px;">
                                    <label style="  position: relative;
            left: 0px;" for="government" class="form-label">Government</label>
                                    <div class="form-floating" id="Government">
                                        <select class="form-select" id="government" asp-for="@Model.Government" required>
                                            <option value="" disabled selected>Select Government</option>
                                            <option value="Cairo">Cairo</option>
                                            <option value="Alexandria">Alexandria</option>
                                            <option value="Asyut">Asyut</option>
                                            <option value="Suez">Suez</option>
                                            <option value="Aswan">Aswan</option>
                                            <option value="Mansoura">Mansoura</option>
                                            <option value="Tanta">Tanta</option>
                                            <option value="Fayoum">Fayoum</option>
                                            <option value="Ismalia">Ismalia</option>
                                            <option value="Qina">Qina</option>
                                            <option value="Other">Other</option>
                                        </select>
                                        <span asp-validation-for="Government" class="text-danger"></span>
                                    </div>
                                </div>


                                <input class="btn btn-primary py-3 px-5 mt-2" type="submit" style="margin-left:180px;" value="Register" />
                            </div>
                        </form>


                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>




