                                                                                @model User

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sign Up - Student</title>
    <style>
        .form-floating {
            margin-bottom: 1rem;
        }

        /* Custom styling for form-select element */
        .form-select {
            width: 100%;
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            background-color: #fff;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            /* Custom styling for form-select when focused */
            .form-select:focus {
                border-color: #80bdff;
                outline: 0;
                box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
            }

        #Gvr {
            margin-left: 50px;
        }

        #register-form {
            padding: 20px;
        }

        .type {
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .card-body input {
            margin-bottom: 20px;
            margin-left: 50px;
        }

        label {
            position: relative;
            left: 55px;
            top: 5px;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign Up</h5>
                        <div class="type">
                            <a class="btn btn-primary py-2 px-2.5 mt-1" style="background-color:#138496;border:none;"
                               asp-action="RegisterStudent" asp-controller="Signup">Student</a>
                            <a class="btn btn-primary py-2 px-2.5 mt-1" asp-action="RegisterTeacher"
                               asp-controller="Signup">Teacher</a>
                            <a class="btn btn-primary py-2 px-2.5 mt-1" asp-action="RegisterParent"
                               asp-controller="Signup">Parent</a>
                        </div>
                        <form id="register-form" method="post" asp-action="RegisterStudent" asp-controller="SignUp"
                              enctype="multipart/form-data">
                            <div class="col-md-9">
                                <label for="name">Name</label>
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" asp-for="@Model.Name" required />
                                    <span asp-validation-for="Name" class="test-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <label for="email">Email</label>
                                <div class="form-floating" id="email">
                                    <input type="email" class="form-control" id="email" asp-for="@Model.Email"
                                           data-target="#date3" data-toggle="datetimepicker" required />
                                    <span asp-validation-for="Email" style="margin-left:70px;margin-top:-60px;" class=" text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <label for="password">Password</label>
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="password"
                                           asp-for="@Model.Password" required minlength="8" />
                                    <span asp-validation-for="Password" class="test-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <label for="age">Age</label>
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="age" asp-for="@Model.Age" required />
                                    <span asp-validation-for="Age" class="test-danger"></span>
                                </div>
                            </div>

                            <div id="Gvr" class="col-md-9">
                                <label for="government" class="form-label" style="position: relative;
            left: 0px;">Government</label>
                                <div class="form-floating" id="Government">
                                    <select class="form-select" id="government" asp-for="@Model.Government"
                                            required>
                                        <option value="" disabled selected>Select Government</option>
                                        <option value="Cairo">Cairo</option>
                                        <option value="Alexandria">Alexandria</option>
                                        <option value="Asyut">Asyut</option>
                                        <option value="Suez">Suez</option>
                                        <option value="Aswan">Aswan</option>
                                        <option value="Mansoura">Mansoura</option>
                                        <option value="Tanta">Tanta</option>
                                        <option value="Fayoum">Fayoum</option>
                                        <option value="Ismalia">Ismalia</option>
                                        <option value="Qina">Qina</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Government" class="text-danger"></span>
                                </div>
                            </div>

                            <div id="Gvr" class="col-md-9">
                                <label style="position: relative;
            left: 0px;" for="educationalLevel">Educational Level</label>
                                <div class="form-floating" id="EducationalLevel">
                                    <select class="form-select" id="educationalLevel" asp-for="@Model.EducationalLevel"
                                            onchange="toggleInputs()" required>
                                        <option value="">Select Educational Level</option>
                                        <option value="Primary School">Primary School</option>
                                        <option value="Secondary School">Secondary School</option>
                                        <option value="High School">High School</option>
                                        <option value="Undergraduate">Undergraduate</option>
                                        <option value="Postgraduate">Postgraduate</option>
                                    </select>
                                    <span asp-validation-for="EducationalLevel" class="text-danger"></span>
                                </div>
                            </div>
                            <div id="collegeDiv" class="col-md-9" style="display: none; position: relative; left: 50px;">
                                <label style="position: relative; left: 0px;" for="college">College</label>
                                <div class="form-floating" id="College">
                       
                                    <select class="form-select" id="college" asp-for="@Model.College">
                                        <option value="">Select College</option>
                                        <option value="Education">Education</option>
                                        <option value="Computer Science">Computer Science</option>
                                        <option value="Engineering">Engineering</option>
                                        <option value="Medicine">Medicine</option>
                                        <option value="Law">Law</option>
                                        <option value="Commerce">Commerce</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="College" class="text-danger"></span>
                                </div>
                            </div>


                            <div id="departmentDiv" class="col-md-9" style="display: none;">
                                <label for="department">Department</label>
                                <div class="form-floating" id="Department">
                              
                                    <input type="text" class="form-control" id="department" asp-for="@Model.Department"  />
                                    <span asp-validation-for="Department" class="test-danger"></span>
                                </div>
                            </div>

                            <div id="majorDiv" class="col-md-9" style="display: none;">
                                <label for="major">Major</label>
                                <div class="form-floating" id="Major">
                                   
                                    <input type="text" class="form-control" id="major" asp-for="@Model.Major" />
                                    <span asp-validation-for="Major" class="test-danger"></span>
                                </div>
                            </div>


                            <input class="btn btn-primary py-3 px-5 mt-2" type="submit" style="margin-left:140px;"
                                   value="Register" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleInputs() {
            var selectedValue = document.getElementById("educationalLevel").value;
            var collegeDiv = document.getElementById("collegeDiv");
            var departmentDiv = document.getElementById("departmentDiv");
            var majorDiv = document.getElementById("majorDiv");

            if (selectedValue === "Undergraduate" || selectedValue === "Postgraduate") {
                collegeDiv.style.display = "block";
                departmentDiv.style.display = "block";
                majorDiv.style.display = "block";
                document.getElementById("department").required = true; // Make department required
                document.getElementById("major").required = true; // Make major required
                document.getElementById("college").required = true; 
            } else {
                collegeDiv.style.display = "none";
                departmentDiv.style.display = "none";
                majorDiv.style.display = "none";
                document.getElementById("department").required = false; // Remove required attribute from department
                document.getElementById("major").required = false; // Remove required attribute from major
                document.getElementById("college").required = false; 

            }
        }
    </script>

</body>
</html>

